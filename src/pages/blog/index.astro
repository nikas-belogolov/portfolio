---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Blog | ${SITE_TITLE}`}
      description="Thoughts, tutorials, and writings"
    />
  </head>
  <body>
    <Header />
    <main>
      <section class="blog-hero">
        <h1>Blog</h1>
        <p class="subtitle">Thoughts, tutorials, and writings</p>
      </section>

      <section class="posts">
        {
          posts.length === 0 ? (
            <p class="no-posts">No posts yet. Check back soon!</p>
          ) : (
            <div class="posts-grid">
              {posts.map((post, index) => (
                <a
                  href={`/blog/${post.id}/`}
                  class:list={["post-card", { featured: index === 0 }]}
                >
                  {post.data.heroImage && (
                    <div class="post-image">
                      <img src={post.data.heroImage} alt="" loading="lazy" />
                    </div>
                  )}
                  <div class="post-content">
                    <FormattedDate date={post.data.pubDate} />
                    <h2>{post.data.title}</h2>
                    <p>{post.data.description}</p>
                  </div>
                </a>
              ))}
            </div>
          )
        }
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .blog-hero {
    text-align: center;
    padding: var(--space-3xl) 0;
    border-bottom: none;
  }

  .blog-hero h1 {
    margin-bottom: var(--space-sm);
  }

  .subtitle {
    color: var(--color-text-subtle);
    font-size: 1.1rem;
  }

  .posts {
    padding: var(--space-xl) 0;
  }

  .no-posts {
    text-align: center;
    color: var(--color-text-muted);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .post-card {
    display: block;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .post-card:hover {
    border-color: var(--color-text-subtle);
    transform: translateY(-4px);
  }

  .post-card.featured {
    grid-column: span 2;
  }

  .post-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--space-xl);
  }

  .post-content time {
    font-size: 0.8rem;
    color: var(--color-text-subtle);
  }

  .post-content h2 {
    font-size: 1.25rem;
    color: var(--color-text);
    margin: var(--space-sm) 0;
    line-height: 1.3;
  }

  .post-card.featured .post-content h2 {
    font-size: 1.5rem;
  }

  .post-content p {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .post-card.featured {
      grid-column: span 1;
    }
  }
</style>
